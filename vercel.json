{
  "builds": [
    {
      "src": "controller.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "memory": 1024,
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "controller.py"
    }
  ],
  "build": {
    "env": {
      "TORCH_HOME": "./.torch"
    }
  },
  "ignoreCommand": "find . -name '*.so' -size +50M -delete"
}