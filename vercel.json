{
  "builds": [
    {
      "src": "controller.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "controller.py"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "TORCH_HOME": "./.torch"
    }
  },
  "ignoreCommand": "find . -name '*.so' -size +50M -delete"
}
